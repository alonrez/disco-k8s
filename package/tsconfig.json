{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "declaration": true,
      "declarationDir": "dist",
      "emitDeclarationOnly": false,
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,            // ‚Üê ignore errors in third-party .d.ts
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src",]
  }
  