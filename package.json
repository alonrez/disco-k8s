  "dependencies": {
    "@kubernetes/client-node": "1.2.0",
    "commander": "2.20.3"
  },
  "devDependencies": {
    "@types/commander": "2.12.5",
    "@types/node": "^22.15.21",
    "@types/ws": "^8.18.1",
    "ts-node": "",
    "typescript": "^5.8.3"
  }
